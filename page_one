<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Walking History Tour</title>
</head>
<body>
    <h1>Welcome to the Walking History Tour</h1>
    <p>Use this website to explore the history of our city on foot. As you walk, we will guide you to historical sites and landmarks and provide you with information about their significance.</p>

    <script>
        // Define the locations and their associated pages
        const locations = [
            { lat: 37.7749, lng: -122.4194, page: 'page1.html' },
            { lat: 37.7799, lng: -122.4064, page: 'page2.html' },
            { lat: 37.7863, lng: -122.4056, page: 'page3.html' }
        ];

        // Get the user's current location
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPage);
        } else {
            alert("Geolocation is not supported by this browser.");
        }

        // Redirect the user to the appropriate page based on their location
        function showPage(position) {
            const latitude = position.coords.latitude;
            const longitude = position.coords.longitude;

            for (let location of locations) {
                if (latitude === location.lat && longitude === location.lng) {
                    window.location.replace(location.page);
                    return;
                }
            }

            alert("Sorry, we could not find a historical site near your location.");
        }
    </script>
</body>
</html>
